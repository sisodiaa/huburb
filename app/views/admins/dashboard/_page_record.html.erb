<div id="record-panel" class="col-sm-offset-3 col-sm-6">
	<h3 class="text-center"><%= "Details of #{page.name}" %></h3>
	<table class="table table-hover table-responsive table-borderless">
		<tr>
			<td class="text-right"><strong>Name</strong></td>
			<td><%= page.name %></td>
		</tr>
		<tr>
			<td class="text-right"><strong>Owned by</strong></td>
			<td><%= link_to page.owner.email, dashboard_record_path('users', page.owner) %></td>
		</tr>
	</table>
</div>
