<%= form_for :invitee, url: invitee_path, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :full_name, class: 'control-label' %><br>
		<%= f.text_field :full_name, class: 'field form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :email, class: 'control-label' %><br>
		<%= f.email_field :email, class: 'field form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :city, 'City (Optional)', class: 'control-label' %><br>
		<%= f.text_field :city, class: 'field form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :description, 'About your business (Optional)', class: 'control-label' %><br>
		<%= f.text_area :description, 
			placeholder: "Example: \nI run a beauty parlour, or \nWe provide coaching to school going children.", 
			class: 'field form-control', rows: 5 %>
	</div>

	<div class="actions">
		<%= f.submit 'Submit', class: 'btn btn-primary btn-block' %>
	</div>
<% end %>
