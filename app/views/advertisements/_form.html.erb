<%= form_for((@ad.new_record? ? [@page, @ad] : @ad), remote: true) do |f| %>
	<% if @ad.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@ad.errors.count, "error") %> prohibited this advertisement from being saved:</h2>

			<ul>
				<% @ad.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="form-group">
		<%= f.label :headline, class: 'control-label' %><br>
		<%= f.text_field :headline, class: 'field form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :body, class: 'control-label' %><br>
		<%= f.text_area :body, rows: 3, class: 'field form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :duration, 'Duration (in days)', class: 'control-label' %><br>
		<% if @ad.published? %>
			<%= f.select :duration, (1..7), {}, disabled: true, class: 'field form-control' %>
		<% else %>
			<%= f.select :duration, (1..7), {}, class: 'field form-control' %>
		<% end %>
	</div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
