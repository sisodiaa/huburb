<div id="password-reset-form" class="col-sm-offset-3 col-sm-6">
	<div class="card margin-bottom-15">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, remote: true, authenticity_token: true) do |f| %>
		<%= devise_error_messages! %>

		<div class="form-group">
			<%= f.label :email, class: "control-label" %><br />
			<%= f.email_field :email, autofocus: true, class: 'field form-control' %>
		</div>

		<div class="actions">
			<%= f.submit "Reset Password", class: 'btn btn-primary btn-block' %>
		</div>
	<% end %>
	</div>
	
	<div class="card">
		<%= render "users/shared/links" %>
	</div>
</div>
