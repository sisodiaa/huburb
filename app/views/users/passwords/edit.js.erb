$('.has-error').each(function() {
	$(this).removeClass('has-error');
});
$('small.help-block').remove();
$('div.alert').remove();
clearAlerts();

<% if error_present?(resource, :password) %>
	$("input#user_password").parent().addClass("has-error");
	$("input#user_password").after("<%= escape_javascript(error_message(resource, :password)) %>");
<% end %>

<% if error_present?(resource, :password_confirmation) %>
	$("input#user_password_confirmation").parent().addClass("has-error");
	$("input#user_password_confirmation")
		.after("<%= escape_javascript(error_message(resource, :password_confirmation)) %>");
<% end %>

<% if error_present?(resource, :reset_password_token) %>
		addAlert("danger", "Reset password token " + "<%= resource.errors[:reset_password_token].to_sentence %>");
<% end %>
