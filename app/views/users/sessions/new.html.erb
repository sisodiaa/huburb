<div id="login-form" class="col-sm-offset-3 col-sm-6">
	<div class="card margin-bottom-15">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true, authenticity_token: true) do |f| %>
		<div class="form-group">
			<%= f.label :email, class: "control-label" %><br />
			<%= f.email_field :email, autofocus: true, class: "field form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :password, class: "control-label" %><br />
			<%= f.password_field :password, autocomplete: "off", class: "field form-control" %>
		</div>

		<% if devise_mapping.rememberable? -%>
			<div class="field">
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
			</div>
		<% end -%>

		<div class="actions">
			<%= f.submit "Sign in", class: 'btn btn-primary btn-block' %>
		</div>
	<% end %>
	</div>

	<div class="card">
		<%= render "users/shared/links" %>
	</div>
</div>
