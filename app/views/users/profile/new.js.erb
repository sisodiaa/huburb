// Remove Validation Errors before rendering
$('.has-error').each(function() {
	$(this).removeClass('has-error');
});
$('small.help-block').remove();
clearAlerts();

<% if error_present?(@profile, :username) %>
	$('input#profile_username').parent().addClass("has-error");
	$('input#profile_username').after("<%= escape_javascript(error_message(@profile, :username)) %>");
<% end %>
